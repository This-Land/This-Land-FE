import { useState } from 'react'
import { Link, Redirect } from 'react-router-dom'
import axios from 'axios'
import clsx from 'clsx'

export default function Addpoi ({ auth }) {
  const [LocationName, setLocationName] = useState('')
  const [address, setAddress] = useState('')
  const [comments, setComments] = useState ('')
  const [images, setImages] = ('')
  const [category, setCategory] = useState('')
  const [feedbackMsg, setFeedbackMsg] = useState('')

  function handleSubmit (event) {
    event.preventDefault()
    axios.post('https://books-api.glitch.me/api/books', {
      locationName:[locationName,
      address: address,
      comments: comments,
      images: images ,
      category: category
    }, { auth })
      .then(response => {
        setFeedbackMsg({ type: 'success', message: 'Point of Interest was successfully added!' })
        console.log(response)
      })
      .catch(error => {
        setFeedbackMsg({ type: 'error', message: 'Information was invalid' })
        console.log(error)
      })
  }
  if (feedbackMsg.type === 'success') {
    return (
      <div>
        <Redirect exact to='/' />
      </div>
    )
  }

  if (!auth) {
    return <Redirect to='/login' />
  }

  return (
    <div>
      <h1 className='f2 b washed-yellow'>Add a Point of Interest</h1>
      {
          feedbackMsg &&
          (
            <div className={clsx(
              'ba', 'bw1', 'pa3',
              {
                'bg-black': (feedbackMsg.type === 'error'),
                'bg-washed red': (feedbackMsg.type === 'success')
              }
            )}
            >
              {feedbackMsg.message}
            </div>
          )
      }
      <form onSubmit={handleSubmit}>
        <div className='mv2'>
          <label className='db b mv2 washed-yellow' htmlFor='locationName'>Location Name</label>
          <input
            required
            type='text'
            id='locationName'
            value={Name}
            onChange={event => setLocationName(event.target.value)}
          />
        </div>
        <div className='mv2'>
          <label className='db b mv2 washed-yellow' htmlFor='address'>Address</label>
          <input
            required
            type='text'
            id='address'
            value={address}
            onChange={event => setAddress(event.target.value)}
          />
        </div>
        <div className='mv2'>
          <label className='db b mv2 washed-yellow' htmlFor='comments>Comments</label>
          <input
            required
            type='text'
            id='comments
            value={Comments}
            onChange={event => setComments(event.target.value)}
          />
          <div className='mv2'>
          <label className='db b mv2 washed-yellow' htmlFor='images>Images</label>
          <input
            required
            type='text'
            id='images
            value={Images}
            onChange={event => setImages(event.target.value)}
          />
          <div className='mv2'>
          <label className='db b mv2 washed-yellow' htmlFor='category>Category</label>
          <input
            required
            type='text'
            id='category
            value={Category}
            onChange={event => setCategory(event.target.value)}
          >
            <option value='null'>Choose from below</option>
            <option value='business'>Business</option>
            <option value='church'>Church</option>
            <option value='house'>House</option>
            <option value='lot'>Lot</option>
         </select>

        </div>
        <div className='mv2'>
          <button type='submit'>Submit</button>
          <p><Link className='returnToMap' to='/'>Return to Map</Link></p>
        </div>
      </form>
    </div>
  )
}
